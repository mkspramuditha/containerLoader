{% extends 'base.html.twig' %}

{% block title %}Results{% endblock %}

{% block body %}
<div class="container" style="margin-top: 30px">
    <div class="alert alert-info">
        <strong>{{ packedBoxes | length }}</strong> container(s) needed
    </div>
    {#<h1>shan</h1>#}
    {#{%   dump(packedBoxes) %}#}
    {#{{ packedBoxes }}#}

    <div class="panel panel-success">
        <div class="panel-heading">Container Details</div>
        <div class="panel-body">
            {% for row in packedBoxes  %}
                {% set a = loop.index0 %}
            <div class="row">

                <div class="col-md-12">
                <div class="panel panel-info">
                    <div class="panel-heading">{{ row.box.reference }} ({{ row.box.outerLength }}mm x {{ row.box.outerWidth }}mm x {{ row.box.outerDepth }}mm) - {{ volumes[a] }} m<sup>3</sup></div>
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <thead>
                            <th width="70%">Item</th>
                            <th width="30%">Quantity</th>
                            </thead>

                            <tbody>
                                {% for key,value in items[a] %}
                                    <tr>
                                        <td>{{ key }}</td>
                                        <td>{{ value }}</td>
                                    </tr>
                                {% endfor %}



                            </tbody>

                        </table>


                    </div>
                </div>
                </div>
            </div>

            {% endfor %}


        </div>
    </div>



</div>
{% endblock %}